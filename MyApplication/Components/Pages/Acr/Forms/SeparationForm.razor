

<MudStack Spacing="2">
    <MudText Typo="Typo.subtitle2">Separation</MudText>

    <MudGrid>
        <MudItem xs="12">
            <MudTextField Label="Submitter Comment" @bind-Value="_submitterComment" ReadOnly="@ReadOnly" Lines="3" />
        </MudItem>
    </MudGrid>
</MudStack>

@code {
    // Host controls Effective Date; keep param for compatibility but don't render it here.
    [Parameter] public DateOnly EffectiveDate { get; set; }
    [Parameter] public bool ReadOnly { get; set; }

    private string? _submitterComment;
}
