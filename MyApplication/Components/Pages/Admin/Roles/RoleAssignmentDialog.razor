@using MyApplication.Components.Model.AOM.Security
@using MyApplication.Components.Service.Security
@inject SecurityService SecurityService

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudStack Spacing="3">

                <MudSelect T="int" Label="Role" @bind-Value="_model.AppRoleId" Required="true" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var role in Roles)
                    {
                        <MudSelectItem Value="@role.Id">@role.Name</MudSelectItem>
                    }
                </MudSelect>

                <MudRadioGroup T="string" @bind-Value="_model.Type">
                    <MudRadio Value="@("User")" Color="Color.Primary">User</MudRadio>
                    <MudRadio Value="@("Group")" Color="Color.Secondary">AD Group</MudRadio>
                </MudRadioGroup>

                @if (_model.Type == "User")
                {
                    <MudAutocomplete T="EmployeeUserDto"
                                     Label="Employee Search"
                                     Value="_selectedEmployee"
                                     ValueChanged="OnUserSelected"
                                     SearchFunc="@SearchUsers"
                                     ToStringFunc="@(e => e?.ToString())"
                                     Required="true"
                                     AdornmentIcon="@Icons.Material.Filled.Person"
                                     Placeholder="Search by Name or Login" />

                    @if (!string.IsNullOrEmpty(_model.Identifier))
                    {
                        <MudText Typo="Typo.caption" Color="Color.Success">
                            Selected: <b>@_model.Identifier</b>
                        </MudText>
                    }
                }
                else
                {
                    <MudTextField @bind-Value="_model.Identifier"
                                  Label="AD Group Name"
                                  Required="true"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Groups"
                                  HelperText="Enter exact AD Group name (e.g. LEIDOS-CORP\SMIT_TODAdmin)" />
                }

            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public List<AppRole> Roles { get; set; } = new();

    private AppRoleAssignment _model = new() { Type = "User" };
    private MudForm _form;
    private EmployeeUserDto? _selectedEmployee;

    private async Task<IEnumerable<EmployeeUserDto>> SearchUsers(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value)) return Enumerable.Empty<EmployeeUserDto>();
        return await SecurityService.SearchEmployeesAsync(value);
    }

    private void OnUserSelected(EmployeeUserDto user)
    {
        _selectedEmployee = user;
        // Automatically ensure the correct format
        if (user != null)
        {
            _model.Identifier = user.Login.Contains("\\") ? user.Login : $"LEIDOS-CORP\\{user.Login}";
        }
    }

    private void Submit()
    {
        _form.Validate();
        if (_form.IsValid && !string.IsNullOrWhiteSpace(_model.Identifier))
        {
            MudDialog.Close(DialogResult.Ok(_model));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}